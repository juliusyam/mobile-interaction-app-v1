<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Goes Here"
            android:id="@+id/nameTextView"
            android:layout_marginBottom="10dp"
            android:layout_margin="5dp"
            android:textColor="#171717"
            android:textSize="25dp"
            android:textFontWeight="1000"
            android:layout_below="@+id/recyclerView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Goes Here"
            android:id="@+id/addressTextView"
            android:layout_marginBottom="10dp"
            android:layout_margin="5dp"
            android:textColor="#373737"
            android:textSize="16dp"
            android:layout_below="@+id/nameTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cross Street Goes Here"
            android:id="@+id/crossStreetTextView"
            android:layout_marginBottom="10dp"
            android:layout_margin="5dp"
            android:textColor="#373737"
            android:textSize="16dp"
            android:layout_below="@+id/addressTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance Goes Here"
            android:id="@+id/distanceTextView"
            android:layout_marginBottom="10dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/crossStreetTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postcode Goes Here"
            android:id="@+id/postcodeTextView"
            android:layout_marginBottom="10dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/distanceTextView"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>